<% layout('BasePage') %>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="block-panel-heading"><%= room.roomName %></h3>
    </div>
    <div class="panel-body" id="messages">
        <% for(var i = 0; i < messages.length; i++) { %>
        <span class="message">
                <span class="messageUser" style="color: <%= messages[i].messageUserColor %>">
                    <%= messages[i].messageUser %>
                </span>
                : <%= messages[i].messageText %>
            </span>
        <% } %>
    </div>
    <div class="panel-footer">
        <form action="">
            <div class="form-group">
                <div class="input-group">
                    <input type="text" class="form-control" id="newMessage" autocomplete="off">
                <span class="input-group-btn">
                    <button class="btn btn-success">Send</button>
                </span>
                </div>
            </div>
            <div class="row">
                <div class="input-group pull-right">
                    <input type="file" id="file">
                </div>
            </div>
        </form>
    </div>
</div>

<script src="js/jquery-1.12.0.js"></script>
<script src="js/socket.io.js"></script>
<script src="js/socket.io-stream.js"></script>
<script src="js/userSocket.js"></script>


